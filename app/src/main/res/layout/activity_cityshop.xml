<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CityshopActivity">
    <include
        layout="@layout/toolbar"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_shop"
            android:layout_marginTop="10dp"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:scaleType="centerCrop"
            android:src="@mipmap/lisiyang"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:ellipsize="end"
            android:paddingLeft="@dimen/margin_min"
            android:text="111111"
            android:textColor="@color/color_max"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shop_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/iv_shop"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/margin_min"
            android:text="222222"
            android:textColor="@color/color_max"
            android:textSize="@dimen/text_size_11" />

        <RelativeLayout
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shop"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/shop_comments"
            android:layout_toRightOf="@id/iv_shop" >

            <TextView
                android:id="@+id/shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3333"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/margin_min"
                android:textColor="@color/color_min"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/shop_dis"
                android:text="444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/margin_min"
                android:textColor="@color/color_min"
                android:textSize="@dimen/text_size_11" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>