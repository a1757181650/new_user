<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/log_bj"
    tools:context=".ui.LoginActivity">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:src="@mipmap/zuo"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="33dp"
        />
<ImageView
    android:layout_width="101dp"
    android:layout_height="71dp"
    android:src="@mipmap/bz"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="73dp"
    />
    <RelativeLayout
        android:id="@+id/login_l"
        android:layout_width="match_parent"
        android:layout_height="120dp"
android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="43.0dip"
        android:background="@drawable/denglu" >

        <RelativeLayout
            android:id="@+id/layoutUse"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_min"
            android:cursorVisible="false"
            android:focusable="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="20dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_max"
                android:background="@mipmap/form_login_ic_phone"
                android:contentDescription="请输入手机号码" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_phone"
                android:background="@null"
                android:ellipsize="start"
                android:textColor="#FFFAFAFA"
                android:inputType="number"
                android:ems="11"
                android:textColorHint="#FFFAFAFA"
                android:hint="请输入手机号码"
                android:paddingLeft="10dp"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutPass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="@dimen/margin_min"
            android:layout_marginTop="74.0dip" >

            <ImageView
                android:id="@+id/imgCode"
                android:layout_width="21dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_max"

                android:background="@mipmap/form_login_ic_pass"
                android:contentDescription="请输入验证码" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgCode"
                android:background="@null"
                android:inputType="number"
                android:ellipsize="start"
                android:ems="10"
                android:textColorHint="#FFFAFAFA"
                android:hint="请输入验证码"
                android:paddingLeft="10dp"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:id="@+id/btn_verificationc_ode"
                android:layout_width="wrap_content"
                android:layout_height="35.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_max"
                android:background="@drawable/bt_shape"
                android:paddingLeft="@dimen/margin_min"
                android:paddingRight="@dimen/margin_min"
                android:text="获取验证码"
                android:textColor="#ffffffff"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/denglujian"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#FFF6F3FC"
            android:text="登录即表示您已阅读并同意"
            />
        <TextView
            android:id="@+id/textView_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#FFF6F3FC"
            android:layout_marginLeft="165dp"
            android:text="《车合历用户协议》"/>

    </RelativeLayout>
</LinearLayout>